@page "/army"
@using BlazorBattles.Shared
@inject IUnitService UnitService
@attribute [Authorize]
<h3>My Army</h3>
<table class="table">
    @foreach (var userUnit in UnitService.MyUnits)
    {
        <tr>
            <td>
                @switch (userUnit.UnitId)
                {
                    case 1: <img src="icons/Sword.png" /> break;
                    case 2: <img src="icons/Bow.png" /> break;
                    case 3: <img src="icons/Hat.png" /> break;
                }
            </td>
            <td>
                @UnitService.Units.First(unit => unit.Id == userUnit.UnitId).Title
            </td>
            <td>
                @userUnit.HitPoints HP
            </td>
        </tr>
    }
</table>


